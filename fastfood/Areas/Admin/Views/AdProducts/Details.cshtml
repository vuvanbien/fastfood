
@model fastfood.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div>
    <h1 style="font-weight: 700; text-align:center; margin-top:25px; margin-bottom: 25px ">THÔNG TIN SẢN PHẨM</h1>
    <hr />

    <table class="table">
        <tr>
            <th>Mã sản phẩm</th>
            <td>@Html.DisplayFor(model => model.ProId)</td>
        </tr>
        <tr>
            <th>Tên sản phẩm</th>
            <td>@Html.DisplayFor(model => model.ProName)</td>
        </tr>
        <tr>
            <th>Mô tả</th>
            <td>@Html.DisplayFor(model => model.ShortDesc)</td>
        </tr>
        <tr>
            <th>Giá</th>
            <td>@Html.DisplayFor(model => model.Price)</td>
        </tr>
        <tr>
            <th>Giảm giá</th>
            <td>@Html.DisplayFor(model => model.Discount)</td>
        </tr>
        <tr>
            <th>Ngày tạo</th>
            <td>
                @{
                    if (Model.CreateDate.HasValue)
                    {
                        <text>@Model.CreateDate.Value.ToShortDateString()</text>
                    }
                    else
                    {
                        <text>N/A</text>
                    }
                }
            <td>
        </tr>
        <tr>
            <th>Ảnh</th>
            <td style="max-width: 100px;">
                <img src="@Url.Content("~/images/products/" + Model.Thumb)" alt="Ảnh món" style="max-width: 50%; height: auto;" />
            </td>
        </tr>
        <tr>
            <th>Bán chạy</th>
            <td>
                @if (Model.Hot.HasValue)
                {
                    if (Model.Hot.Value)
                    {
                        <i class="fa-solid fa-check" style="color: #2fd501; font-size: 30px;"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-xmark" style="color: #ed3507; font-size: 30px;"></i>
                    }
                }
                else
                {
                    <span style="color: #999;">N/A</span>
                }
            </td>
        </tr>
        <tr>
            <th>Trạng thái</th>
            <td>
                @if (Model.Active.HasValue)
                {
                    if (Model.Active.Value)
                    {
                        <i class="fa-solid fa-check" style="color: #2fd501; font-size: 30px;"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-xmark" style="color: #ed3507; font-size: 30px;"></i>
                    }
                }
                else
                {
                    <span style="color: #999;">N/A</span>
                }
            </td>
        </tr>
        
        <tr>
            <th>Loại sản phẩm</th>
            <td>@Html.DisplayFor(model => model.Cate.CateName)</td>
        </tr>
    </table>
    
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ProId">Sửa</a> 
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</div>
